<% if @article.errors.any? %>
    <div class="alert alert-danger" role="alert alert-warning alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
         <span aria-hidden="true">&times;</span>
    </button> 
    <h4 class="alert-heading">The following errors prevented the article from saving!</h4>
    
        <ul>
                <% @article.errors.full_messages.each do |msg| %>
                    <li><%= msg %> </li>
                <% end %>
        </ul>
        
    </div>
<% end %>